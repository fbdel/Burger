<h1 id="title">Eat-Da-Burger App!</h1>
<div class="content-body">
  <div class="burger-block-list">
    <h2>List of Burgers!</h2>

    <ul>
      {{#each cats}}
      {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="image-div">
    <img src="./assets/images/burger2.jpg" alt="Burger Image" height="270" width="270">
    <div class="create-div">
      <h2>Add a Burger</h2>
      <form class="create-form">
    
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
    
        <div class="form-group">
          <label for="sleepy">Has the burger been eaten Yet?</label><br>
          <input type="radio" name="sleepy" value="1" checked> Not Yet!<br>
          <input type="radio" name="sleepy" value="0"> Yup, it was yummy!
        </div>
    
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
  {{!-- Burger/public/assets/images/Burger.jpeg --}}



  <div class="burger-block-eaten">
    <h2>Devoured Burgers!</h2>
    <ul>
      {{#each cats}}
      {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

</div>
<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devour}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devour}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devour">Devour?</label><br>
        <input type="radio" name="devour" value="1" checked> Devour!<br>
        <input type="radio" name="devour" value="0"> Not Eaten
    </div>

    <button type="submit">Add Burger</button>
</form>







<div class="row">
    <div class="col">
        <h2 class="text-center">Ready</h2>
        <ul class="list-group list-group-flush">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col">
        <h2 class="text-center">All Gone</h2>
        <ul class="list-group list-group-flush">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <h3 class="text-center">Add a Burger</h3>
        <form class="create-form">
            <div class="form-group">
                <label for="burger-name">Burger Name:</label>
                <input type="text" class="form-control" id="burger-name" name="name">
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Add Burger</button>
        </form>
    </div>
</div>


